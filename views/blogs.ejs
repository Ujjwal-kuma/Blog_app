<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: greenyellow;
        }

        .navbar {
            background-color: royalblue;
            width: auto;
            height: 5rem;
            border-bottom: 3px;
        }

        .navbar ul {
            display: flex;
            list-style-type: disc;
            margin-left: 40px;
            padding-top: 20px;


        }

        .navbar ul li {
            font-size: 1.5rem;
            margin: auto;
        }

        .navbar ul a {
            color: black;
            padding: 5px;
            text-decoration: none;
        }

        .navbar ul a:hover {
            box-shadow: 0 0 2px red;
            border-radius: 5px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
</head>

<body>

    <section class="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/blogs">Blog</a></li>
            <li><a href="/addblog">Add Blog</a></li>
        </ul>

    </section>

    <h1 style="text-align: center;">All Blogs</h1>
    <table border="2" style="text-align: center;">
        <tr>
            <% data.forEach(element=>{ %>
                <div class="blog">
        <tr>
            <td><img src="<%= element.imagepath %>" alt="blog_image" width="40cm" height="40cm" id="image"></td>
            <td>
                <%= element.id %>
            </td>
            <td>
                <%= element.title %>
            </td>
            <td>
                <%= element.disc %>
            </td>
            <td>
                <%= element.date %>
            </td>
            <td><a href="/update/<%=element.id %>"><button type="Submit" class="update">Edit</button></a></td>
            <td><button type="Submit" class="view"> VIEW</button></a></td>
        </tr>

        </div>
        <% }) %>
            </tr>

    </table>
    <div class="details"></div>

</body>

<script>
    $(document).ready(
        $('.view').click(function () {
            var abspath = $("#image").prop('src');
            let currentrow = $(this).closest('tr')
            var col1 = currentrow.find('td:eq(0)').text();
            var col2 = currentrow.find('td:eq(1)').text();
            var col3 = currentrow.find('td:eq(2)').text();
            var col4 = currentrow.find('td:eq(3)').text();
            var col5 = currentrow.find('td:eq(4)').text();
            var col6 = currentrow.find('td:eq(5)').text();
            var col7 = currentrow.find('td:eq(6)').text();
            $('.details').html(
                `<h2>Details</h2>
            id:${col2}<br>
            Firstname :${col3}<br>
            Lastname : ${col4}<br>
            Email:${col5}<br>
            Phone: ${col6}<br>
            Address: ${col7}<br>`
            )
        })
    );
</script>

</html>